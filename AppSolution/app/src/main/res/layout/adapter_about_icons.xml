<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/activity_single_space"
    android:paddingBottom="@dimen/activity_single_space"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/img_adapter_about_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:contentDescription="Icon"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/activity_double_space"
        android:layout_marginStart="@dimen/activity_double_space"
        android:layout_marginEnd="@dimen/activity_double_space"
        android:layout_marginRight="@dimen/activity_double_space"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/tv_adapter_about_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="@dimen/activity_double_space"
        android:layout_marginRight="@dimen/activity_double_space"
        android:layout_toRightOf="@+id/img_adapter_about_icon"
        android:layout_toEndOf="@id/img_adapter_about_icon"
        android:paddingLeft="@dimen/activity_single_space"
        android:paddingStart="@dimen/activity_single_space"
        android:text="Text next to icon"
        android:textColor="@color/colorTextPrimary"
        android:textSize="@dimen/material_text_body1" />

</RelativeLayout>