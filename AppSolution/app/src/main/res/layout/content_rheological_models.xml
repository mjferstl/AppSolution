<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.constraint.ConstraintLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_single_space"
        android:layout_marginStart="@dimen/activity_single_space"
        android:layout_marginRight="@dimen/activity_single_space"
        android:layout_marginEnd="@dimen/activity_single_space"
        android:paddingTop="@dimen/activity_single_space"
        android:orientation="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context=".RheologicalModels"
        tools:showIn="@layout/activity_rheological_models">

        <LinearLayout
            android:id="@+id/linLay_rheolocical_model_KV_inputs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/activity_single_space">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Kelvin-Voigt-Element"
                    android:paddingTop="8dp"
                    android:textSize="@dimen/material_text_title"
                    android:gravity="center_horizontal"
                    android:paddingBottom="@dimen/activity_single_space"
                    android:textColor="@color/black"
                    android:layout_gravity="center_vertical"/>

                <ImageButton
                    android:id="@+id/btn_rheological_models_KV_img"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:scaleType="fitXY"
                    android:visibility="gone"
                    android:src="@drawable/ic_kelvin_voigt_element"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:tint="@color/colorAccent" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linLay_rheolocical_model_KV_c"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:text="c"
                    style="@style/AppTheme.Formula_symbol"
                    android:gravity="end"
                    android:paddingEnd="@dimen/activity_single_space"
                    android:paddingRight="@dimen/activity_single_space"
                    android:paddingStart="0dp"
                    android:paddingLeft="0dp"/>
                <EditText
                    android:id="@+id/et_rheolocical_model_KV_c"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:hint="@string/txt_stiffness"/>
                <TextView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:text="N/mm"
                    style="@style/AppTheme.Formula_unit"
                    android:paddingStart="@dimen/activity_single_space"
                    android:paddingLeft="@dimen/activity_single_space"
                    android:paddingEnd="0dp"
                    android:paddingRight="0dp"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linLay_rheolocical_model_KV_d"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/linLay_rheolocical_model_KV_c">

                <TextView
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:text="d"
                    style="@style/AppTheme.Formula_symbol"
                    android:paddingRight="@dimen/activity_single_space"
                    android:paddingEnd="@dimen/activity_single_space"
                    android:paddingStart="0dp"
                    android:paddingLeft="0dp"
                    android:gravity="end"/>
                <EditText
                    android:id="@+id/et_rheolocical_model_KV_d"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:inputType="numberDecimal"
                    android:layout_height="wrap_content"
                    android:hint="@string/txt_damping"/>
                <TextView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:text="Nm/s"
                    style="@style/AppTheme.Formula_unit"
                    android:paddingLeft="@dimen/activity_single_space"
                    android:paddingStart="@dimen/activity_single_space"
                    android:paddingEnd="0dp"
                    android:paddingRight="0dp"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linLay_rheolocical_model_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="12dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/linLay_rheolocical_model_KV_inputs">

            <TextView
                android:layout_width="30dp"
                android:gravity="end"
                android:layout_height="wrap_content"
                android:text="f"
                style="@style/AppTheme.Formula_symbol"
                android:paddingRight="@dimen/activity_single_space"
                android:paddingEnd="@dimen/activity_single_space"
                android:paddingStart="0dp"
                android:paddingLeft="0dp"/>

            <EditText
                android:id="@+id/et_rheolocical_model_KV_fmin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="min"
                android:layout_gravity="end"
                android:inputType="numberDecimal"
                android:gravity="end"
                android:paddingEnd="@dimen/activity_single_space"
                android:paddingRight="@dimen/activity_single_space"
                android:paddingStart="0dp"
                android:paddingLeft="0dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" - "
                android:textSize="@dimen/material_text_body1"
                android:textColor="@color/black"
                android:paddingRight="@dimen/activity_single_space"
                android:paddingEnd="@dimen/activity_single_space"
                android:paddingStart="0dp"
                android:paddingLeft="0dp"/>

            <EditText
                android:id="@+id/et_rheolocical_model_KV_fmax"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="max"
                android:inputType="numberDecimal"
                android:paddingRight="@dimen/activity_single_space"
                android:paddingEnd="@dimen/activity_single_space"
                android:paddingStart="0dp"
                android:paddingLeft="0dp"/>

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Hz"
                style="@style/AppTheme.Formula_unit"/>

            <Button
                style="@style/AppTheme.Button"
                android:id="@+id/btn_rheological_models_calculate"
                android:text="@string/maths_calculate"
                android:textSize="@dimen/material_text_button"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linLay_rheolocical_model_KV_icon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_single_space"
            app:layout_constraintTop_toBottomOf="@+id/linLay_rheolocical_model_btn"
            android:paddingBottom="@dimen/activity_single_space"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/img_rheolocical_model_KV_icon"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:scaleType="fitXY"
                android:src="@drawable/ic_kelvin_voigt_element" />

        </LinearLayout>

        <com.androidplot.xy.XYPlot
            android:visibility="gone"
            android:id="@+id/dynamic_stiffness_plot"
            style="@style/APDefacto.Light"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:alpha="100"
            app:borderThickness="0dp"
            app:domainTitle="@string/txt_plot_frequency_with_units"
            app:layout_constraintTop_toBottomOf="@+id/linLay_rheolocical_model_KV_icon"
            app:lineLabels="left|bottom"
            app:marginBottom="0dp"
            app:marginLeft="0dp"
            app:marginRight="0dp"
            app:marginTop="0dp"
            app:rangeTitle="@string/txt_plot_dyn_stiffness_with_unit"
            app:title="dynamische Steifigkeit" />

        <TextView
            android:id="@+id/tv_rheological_models_values"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:text="@string/txt_values"
            android:textColor="@color/colorTextPrimary"
            android:textSize="@dimen/material_text_title"
            app:layout_constraintTop_toBottomOf="@id/dynamic_stiffness_plot"/>

        <ListView
            android:id="@+id/lv_rheological_models_values"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:nestedScrollingEnabled="true"
            android:paddingTop="@dimen/activity_single_space"
            app:layout_constraintTop_toBottomOf="@id/tv_rheological_models_values">

        </ListView>


    </android.support.constraint.ConstraintLayout>

</ScrollView>
