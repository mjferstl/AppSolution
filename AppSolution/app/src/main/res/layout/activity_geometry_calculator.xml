<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="mfdevelopement.appsolution.GeometryCalculator">
    <LinearLayout
        android:id="@+id/ll_maths_circle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/ll_maths_circle_heading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingEnd="5pt"
            android:paddingStart="5pt">
            <TextView
                android:id="@+id/txtv_maths_circle_title"
                android:layout_width="0pt"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingBottom="2pt"
                android:paddingTop="2pt"
                android:text="@string/maths_circle_def"
                android:textColor="@color/colorTextPrimary"
                android:textSize="@dimen/material_text_title"/>
<!--            <Button
                android:id="@+id/btd_maths_circle_help"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/btd_help"
                style="@style/AppTheme.FlatButton"
                android:textSize="@dimen/material_text_button"/>-->
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_maths_circle_edit_diameter"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="5pt"
            android:paddingTop="3pt">
            <EditText
                android:id="@+id/txte_maths_circle_diameter"
                android:layout_width="0pt"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="@string/maths_hint_diameter"
                android:inputType="numberDecimal"
                android:textSize="@dimen/material_text_hint"/>
            <Button
                android:id="@+id/btd_maths_circle_calc"
                style="@style/AppTheme.Button"
                android:layout_gravity="bottom"
                android:text="@string/maths_calculate"
                android:textAllCaps="true"
                android:textSize="@dimen/material_text_button"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_maths_circle_result"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="5pt">
            <TextView
                android:id="@+id/txtv_maths_circle_result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingEnd="4pt"
                android:paddingStart="4pt"
                android:text="@string/maths_solution_name"
                android:textColor="@color/colorTextPrimary"
                android:textSize="@dimen/material_text_subhead"/>
            <TextView
                android:id="@+id/txtv_maths_circle_result_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/colorTextPrimary"
                android:textSize="@dimen/material_text_body1"/>
        </LinearLayout>
        <TextView
            android:id="@+id/txtv_maths_circle_hrule"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/hrule"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_maths_rectangle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="5pt">
        <LinearLayout
            android:id="@+id/ll_maths_rectangle_heading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingEnd="5pt"
            android:paddingStart="5pt">
            <TextView
                android:id="@+id/txtv_maths_rectangle_title"
                android:layout_width="0pt"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/maths_rectangle_def"
                android:textColor="@color/colorTextPrimary"
                android:textSize="@dimen/material_text_title"/>
<!--            <Button
                android:id="@+id/btd_maths_rectangle_help"
                style="@style/AppTheme.FlatButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/btd_help"
                android:textSize="@dimen/material_text_button"/>-->
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_maths_rectangle_edit_width_height"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="5pt"
            android:paddingTop="3pt">
            <EditText
                android:id="@+id/txte_maths_rectangle_width"
                android:layout_width="0pt"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="@string/maths_hint_width"
                android:inputType="numberDecimal"
                android:textSize="@dimen/material_text_hint"/>
            <TextView
                android:id="@+id/txtv_maths_multi_operator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/maths_multi_operator"
                android:textColor="@color/colorTextPrimary"
                android:textSize="@dimen/material_text_body1"/>
            <EditText
                android:id="@+id/txte_maths_rectangle_height"
                android:layout_width="0pt"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="@string/maths_hint_height"
                android:inputType="numberDecimal"
                android:textSize="@dimen/material_text_hint"/>
            <Button
                android:id="@+id/btd_maths_rectangle_calc"
                style="@style/AppTheme.Button"
                android:layout_gravity="bottom"
                android:text="@string/maths_calculate"
                android:textAllCaps="true"
                android:textSize="@dimen/material_text_button" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_maths_rectangle_result"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/txtv_maths_rectangle_result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingEnd="4pt"
                android:paddingStart="4pt"
                android:text="@string/maths_solution_name"
                android:textColor="@color/colorTextPrimary"
                android:textSize="@dimen/material_text_subhead"/>
            <TextView
                android:id="@+id/txtv_maths_rectangle_result_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/colorTextPrimary"
                android:textSize="@dimen/material_text_body1"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
