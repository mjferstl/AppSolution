<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Button" parent="Base.Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/colorPrimary</item>
        <item name="android:textColor">@color/White</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">14pt</item>
        <item name="android:insetLeft">16dp</item>
        <item name="android:radius">2dp</item>
    </style>

    <style name="AppTheme.FlatButton" parent="Base.Widget.AppCompat.Button.Colored">
        <item name="android:background">#00000000</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:height">36dp</item>
        <item name="android:minWidth">88dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:textSize">14pt</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:radius">2dp</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="coordinatorLayoutStyle">@style/Widget.Support.CoordinatorLayout</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">

    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.Formula_symbol">
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:textSize">@dimen/material_text_body1</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.Formula_unit">
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:textSize">@dimen/material_text_body1</item>
    </style>

</resources>
