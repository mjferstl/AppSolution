<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="mfdevelopement.appsolution">

    <!-- PW: ...android -->

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_appsolution_logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activities.Main"
            android:configChanges="locale|orientation">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.CurrencyConverter"
            android:configChanges="locale|orientation"
            android:label="@string/title_activity_currency_calculator"
            android:parentActivityName=".activities.Main" />
        <activity
            android:name=".activities.CocktailOverview"
            android:configChanges="locale|orientation"
            android:label="@string/title_activity_cocktail_overview"
            android:parentActivityName=".activities.Main" />
        <activity
            android:name=".activities.CocktailRecipe"
            android:configChanges="locale|orientation"
            android:label="@string/title_activity_cocktail_recipe"
            android:parentActivityName=".activities.CocktailOverview" />
        <activity
            android:name=".activities.MensaSpeiseplan"
            android:configChanges="locale|orientation"
            android:label="@string/title_activity_mensa_speiseplan"
            android:parentActivityName=".activities.Main" />
        <activity
            android:name=".activities.GeometryCalculator"
            android:configChanges="locale|orientation"
            android:label="@string/title_activity_maths"
            android:parentActivityName=".activities.Main" />
        <activity
            android:name=".activities.MechanicalEngineering"
            android:configChanges="locale|orientation"
            android:label="@string/title_activity_mechanical_engineering"
            android:parentActivityName=".activities.Main" />
        <activity
            android:name=".activities.Reynoldszahl"
            android:configChanges="locale|orientation"
            android:label="@string/title_activity_reynoldszahl"
            android:parentActivityName=".activities.MechanicalEngineering" />
        <activity
            android:name=".activities.About"
            android:configChanges="locale|orientation"
            android:label="@string/title_activity_about_screen"
            android:parentActivityName=".activities.Main" />
        <activity
            android:name=".activities.Sensors"
            android:configChanges="locale|orientation"
            android:label="@string/title_activity_sensors"
            android:parentActivityName=".activities.Main" />
        <activity
            android:name=".activities.PhoneSensors"
            android:label="@string/title_activity_phone_sensors"
            android:parentActivityName=".activities.Main"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="mfdevelopement.appsolution.activities.Main" />
        </activity>
        <activity
            android:name=".activities.ClothesSize"
            android:label="@string/title_activity_clothes_size"
            android:parentActivityName=".activities.Main">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="mfdevelopement.appsolution.activities.Main" />
        </activity>
        <activity
            android:name=".activities.AboutIcons"
            android:label="@string/title_activity_about_icons"
            android:parentActivityName=".activities.About">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="mfdevelopement.appsolution.activities.About" />
        </activity>
        <activity
            android:name=".activities.WeatherOverview"
            android:label="@string/title_activity_weather_overview"
            android:parentActivityName=".activities.Main">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="mfdevelopement.appsolution.activities.Main" />
        </activity>
        <activity
            android:name=".activities.RheoModels"
            android:label="@string/title_activity_rheo_models"
            android:parentActivityName=".activities.Main">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="mfdevelopement.appsolution.activities.Main" />
        </activity>
    </application>

</manifest>